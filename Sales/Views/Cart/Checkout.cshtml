@using Sales.Data.Models
@model CheckoutModel

@{
    ViewData["Title"] = "Оформление заказа";
    var user = (ApplicationUser)ViewBag.LoginedUser;
}

<div class="container">
    <form asp-action="Checkout">
    <div class="row mt-2">
        <h1>Оформление заказа</h1>
    </div>
    <div class="row mt-5">
        <a asp-action="Index" asp-controller="Cart">Назад</a>
        <h3>Покупатель</h3>
        <div class="col-8">

            @{
                var userName = string.IsNullOrEmpty(@user.Name) ? "Без имени" : @user.Name;
            }

            <p><b>Имя</b> @userName</p>
            <p><b>Email</b> @user.Email</p>
            <p><b>Телефон</b> @user.PhoneNumber</p>
        </div>
        <div class="col-4">
            <h3>Сумма</h3>
            <p><b>Итого</b> 22000 BYN</p>
            <div class="mt-3">
                <input class="btn btn-success" type="submit" value="Оформить заказ"/>
            </div>
        </div>
    </div>
        <div class="row mt-5">
            <div class="col-6">
                <h3>Доставка</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SelectedAddress" class="control-label"></label>
                    <select asp-for="SelectedAddress" asp-items="@ViewBag.Addresses" class="form-control"></select>
                    <span asp-validation-for="SelectedAddress" class="text-danger"></span>
                </div>
                <div class="form-check form-switch mt-2">
                    <input asp-for="UseManualAddress" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="UseManualAddress" class="form-check-label" for="flexSwitchCheckDefault"></label>
                    <span asp-validation-for="UseManualAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>