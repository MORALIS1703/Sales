@model Sales.Data.Models.ApplicationUser

@{
    ViewData["Title"] = "Просмотр сотрудников";
}

<div class="row mt-2">
    <h3>Сотрудники</h3>
    <dl class="row">
        <dt class="col-sm-2">
            Имя пользователя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<div class="mt-2">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Изменить</a>
    <a asp-action="Index" class="btn btn-dark">Назад</a>
</div>