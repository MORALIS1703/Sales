@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Главная";

}


<div class="container mt-5">
    <div class="row mt-5">
        <h2 class="text-center">Металлургический завод</h2>
    </div>
    <div class="row mt-5">
        <h3>Категории товаров</h3>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 p-2">
                <div class="card">

                    @if (item.Image != null)
                    {
                        var path = $"img\\{item.Image}";

                        <img src="@path" style="height:250px;" class="card-img-top" alt="...">
                    }
                    else
                    {
                        <img src="~/img/placeholder.png" style="height:250px;" class="card-img-top" alt="...">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                    <div class="card-body">
                        <a asp-controller="Catalog" asp-route-id="@item.Id" title="Перейти в каталог" class="px-2 btn btn-primary">Перейти в каталог</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>